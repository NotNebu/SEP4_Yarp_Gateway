{
  "ReverseProxy": {
    "Routes": {
      "authDirect": {
        "ClusterId": "userService",
        "Match": {
          "Path": "/AuthService/{**catch-all}"
        }
      },
      "userGrpc": {
        "ClusterId": "userService",
        "Match": {
          "Path": "/user.grpc.AuthService/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "userService": {
        "Destinations": {
          "destination1": {
            "Address": "http://user-service:5001"
          }
        },
        "HttpRequest": {
          "Version": "2.0",
          "VersionPolicy": "RequestVersionOrHigher"
        }
      }
    }
  }
}
